@model CoffeeShops.ViewModels.AddRecordMenuViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/log_reg_style.css" />
    <link rel="stylesheet" href="~/css/errorstyle.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <title>Добавление напитка в меню</title>
    <style>
        .back-btn, .upper-btn, .fav-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 18px;
            margin-right: 10px;
        }

        .back-btn {
            color: #EDE7DD;
            background-color: #2c1c1a;
        }

        .upper-btn {
            color: #5E463D;
            background-color: #EDE7DD;
        }

        .del-btn {
            color: #EDE7DD;
            background-color: darkred;
        }

        .button-group {
            display: flex;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 100;
        }

        main {
            background-color: #d3b997;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            margin-top: 80px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #5E463D;
            }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #5E463D;
            border-radius: 4px;
            background-color: #EDE7DD;
            box-sizing: border-box;
        }

        select.form-control {
            height: 38px;
        }

        .price-volume-container {
            display: flex;
            gap: 15px;
            margin: 15px 0;
        }

        .price-volume-field {
            flex: 1;
        }

        .btn-primary {
            background-color: #5E463D;
            color: #EDE7DD;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #3e2e2a;
            }

        .form-errors {
            width: 100%;
            margin: 0 0 20px 0;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-item {
            margin: 0px 0;
            font-size: 14px;
        }

        .text-danger {
            color: red;
            font-size: 0.875em;
            display: block;
            margin-top: 5px;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }
    </style>
</head>

<body>
    <div class="button-group">
        <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
        <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
        <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
        <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
        <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>

        @if (Model != null)
        {@if (Model.Id_role == 3)
            {
                <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
            }
        }

        <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
    </div>

    <main>
        <form method="post">
            @Html.AntiForgeryToken()
            <h3 style="color: #5E463D; text-align: center;">Добавление напитка в меню</h3>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="viewbag-error">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-errors">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="error-item">@error.ErrorMessage</div>
                    }
                </div>
            }

            <div class="form-group">
                <label for="SelectedDrinkId">Выберите напиток:</label>
                <select asp-for="Id_drink" name="Id_drink" class="form-control" id="SelectedDrinkId">
                    <option value="">-- Выберите напиток --</option>
                    @foreach (var drink in Model.AvailableDrinks)
                    {
                        <option value="@drink.Id_drink">@drink.Name</option>
                    }
                </select>
                <span asp-validation-for="Id_drink" class="text-danger"></span>
            </div>

            <div class="price-volume-container">
                <div class="form-group price-volume-field">
                    <label asp-for="Price">Цена</label>
                    <input asp-for="Price" name="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group price-volume-field">
                    <label asp-for="Size">Объем (мл)</label>
                    <input asp-for="Size" name="Size" class="form-control" type="number" min="0" placeholder="0" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <button type="submit" class="btn-primary">Добавить в меню</button>
            </div>
        </form>
    </main>
</body>
</html>