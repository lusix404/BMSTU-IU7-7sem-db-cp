@model CoffeeShops.ViewModels.FavCoffeeShopsListViewModel

@{
    ViewData["Title"] = "Избранные кофейни";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .coffeeshops-container {
            width: 85%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .coffeeshops-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .coffeeshops-table th,
            .coffeeshops-table td {
                padding: 12px 15px;
                border-bottom: 1px solid #EDE7DD;
                vertical-align: middle;
            }

            .coffeeshops-table th {
                font-weight: bold;
                background-color: rgba(94, 70, 61, 0.3);
                border: 1px solid #EDE7DD;
            }

        .address-column {
            width: 50%;
        }

        .hours-column {
            width: 20%;
        }

        .actions-column {
            width: 30%;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        .empty-message {
            color: #EDE7DD;
            font-style: italic;
            padding: 20px 0;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .header-with-button {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .add-coffeeshop-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 16px;
            background-color: #2c1c1a;
        }
        .error-container {
            width: 95%;
            margin: 0 auto 20px;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-message {
            margin: 5px 0;
            font-size: 14px;
        }

        .company-column {
            width: 20%; 
        }

        .address-column {
            width: 40%; 
        }

        .hours-column {
            width: 15%; 
        }

        .actions-column {
            width: 25%;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>
            @if (Model != null)
            {@if (Model.Id_role == 3)
                {
                    <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
                }
            }

            <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="viewbag-error">
            @ViewBag.ErrorMessage
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-container">

            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="error-message">@error.ErrorMessage</div>
            }
        </div>
    }
    <div class="coffeeshops-container">
        <div class="header-with-button">
            <h2>Список избранных кофеен:</h2>
            
        </div>

        @if (Model.FavCoffeeShops.Any())
        {
            <table class="coffeeshops-table">
                <thead>
                    <tr>
                        <th class="company-column">Название</th> 
                        <th class="address-column">Адрес</th>
                        <th class="hours-column">Часы работы</th>
                        <th class="actions-column">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shopWithCompany in Model.FavCoffeeShops)
                    {
                        var shop = shopWithCompany.CoffeeShop;
                        <tr>
                            <td class="company-column">@shopWithCompany.CompanyName</td>
                            <td class="address-column">@shop.Address</td>
                            <td class="hours-column">@shop.WorkingHours</td>
                            <td class="actions-column">
                                <div class="action-buttons">
                                    <a href="@Url.Action("DeleteFromFavs", "CoffeeShop", new { coffeeshop_id = shop.Id_coffeeshop })"
                                       class="action-btn">Удалить</a>
                                    <a href="@Url.Action("GetMenuByCompany", "Menu", new { companyId = shop.Id_company })"
                                       class="action-btn shops-btn">Меню</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-message">У вас нет избранных кофеен</p>
        }
    </div>
</body>
</html>