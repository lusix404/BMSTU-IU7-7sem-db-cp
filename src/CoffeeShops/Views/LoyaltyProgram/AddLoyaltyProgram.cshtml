@model CoffeeShops.ViewModels.AddLoyaltyProgramViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/log_reg_style.css" />
    <link rel="stylesheet" href="~/css/errorstyle.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <title>Добавление программы лояльности</title>
    <style>
        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .button-group {
            display: flex;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 100;
            gap: 10px;
            flex-wrap: wrap;
        }

        main {
            background-color: #d3b997;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            margin: 80px auto 0;
        }

        h3 {
            text-align: center;
            color: #2c1c1a;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #d3b997;
            border-radius: 4px;
            margin-right: 10px;
        }

        .text-danger {
            color: red;
            font-size: 0.875em;
        }

        .error-container {
            width: 95%;
            margin: 0 auto 20px;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-message {
            margin: 0px 0;
            font-size: 14px;
        }

        .form-errors {
            width: 100%;
            margin: 0 0 20px 0;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-item {
            margin: 0px 0;
            font-size: 14px;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }

        .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #5E463D;
            color: #EDE7DD;
            font-size: 16px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #2c1c1a;
            }

        label {
            display: block;
            margin-bottom: 5px;
            color: #2c1c1a;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="button-group">
        <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
        <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
        <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
        <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
        <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>
        @if (Model != null)
        {
            @if (Model.Id_role == 3)
            {
                <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
            }
        }
        <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
    </div>

    <main>
        <form method="post">
            @Html.AntiForgeryToken()
            <h3>Добавление программы лояльности:</h3>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="viewbag-error">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-errors">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="error-item">@error.ErrorMessage</div>
                    }
                </div>
            }

            <div class="form-group">
                <label asp-for="Type">Тип программы лояльности</label>
                <div class="col-md-5">
                    <input asp-for="Type" name="Type" class="form-control" placeholder="Например: Пластиковая карта, виртуальная карта..." />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description">Описание программы</label>
                <div class="col-md-5">
                    <textarea asp-for="Description" name="Description" class="form-control" placeholder="Описание условий программы, предложений, акций..." rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Добавить программу" class="btn" />
            </div>
        </form>
    </main>
</body>
</html>