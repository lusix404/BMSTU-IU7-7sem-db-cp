@model CoffeeShops.ViewModels.MenuListViewModel

@{
    ViewData["Title"] = "Меню сети кофеен";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .menu-container {
            width: 95%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .menu-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .menu-table th,
            .menu-table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #EDE7DD;
                vertical-align: middle;
            }

            .menu-table th {
                font-weight: bold;
                background-color: rgba(94, 70, 61, 0.3);
                border: 1px solid #EDE7DD;
            }

        .drink-column {
            width: 30%;
        }

        .size-column {
            width: 10%;
            text-align: center;
        }

        .price-column {
            width: 25%;
            text-align: right;
        }

        .actions-column {
            width: 35%;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .empty-message {
            color: #EDE7DD;
            font-style: italic;
            padding: 20px 0;
        }

        error-container {
            width: 95%;
            margin: 0 auto 20px;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 3px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-message {
            margin: 5px 0;
        }

        .addrecord-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 14px;
            background-color: #572918;
            white-space: nowrap;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>

            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>

            @if (Model != null)
            {@if (Model.Id_role == 3)
                {
                    <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
                }
            }

            <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="viewbag-error">
            @ViewBag.ErrorMessage
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
    <div class="error-container">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="error-message">@error.ErrorMessage</div>
        }
    </div>
    }
    <div class="menu-container">
        <h2>Напитки из меню:</h2>
        @if (Model?.Id_role == 2 || Model?.Id_role == 3)
        {
            <a href="@Url.Action("AddRecordMenu", "Menu", new { id_company = Model.Id_company })"
               class="addrecord-btn"
               style="font-size: 16px; padding: 8px 15px;">
                + Добавить напиток в меню
            </a>
        }

        @if (Model.Menu.Any() && Model.Drinks.Any())
        {
            <table class="menu-table">
                <thead>
                    <tr>
                        <th class="drink-column">Название</th>
                        <th class="size-column">Размер (мл)</th>
                        <th class="price-column">Цена (руб.)</th>
                        <th class="actions-column">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Menu.Count; i++)
                    {
                        var menuItem = Model.Menu[i];
                        var drink = Model.Drinks[i];

                        <tr>
                            <td class="drink-column">@drink.Name</td>
                            <td class="size-column">@menuItem.Size</td>
                            <td class="price-column">@menuItem.Price.ToString("N2")</td>
                            <td class="actions-column">
                                <div class="action-buttons">
                                    <a href="@Url.Action("AddToFavs", "Drink", new { drink_id = drink.Id_drink, page = menuItem.Id_company })"
                                       class="action-btn">Добавить в избранные</a>
                                    @if (Model?.Id_role == 2 || Model?.Id_role == 3)
                                    {
                                        <a href="@Url.Action("DeleteMenuRecord", "Menu", new { id_menu = menuItem.Id_menu, id_company = menuItem.Id_company })"
                                           class="action-btn">Удалить из меню</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="empty-message">Сведений о меню данной сети кофеен нет</p>
        }
    </div>
</body>
</html>