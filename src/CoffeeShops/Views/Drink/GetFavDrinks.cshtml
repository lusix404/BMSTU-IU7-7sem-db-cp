@model CoffeeShops.ViewModels.FavDrinksListViewModel

@{
    ViewData["Title"] = "Избранные напитки";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .company-actions {
            padding: 8px 10px;
            word-break: break-word;
            overflow-wrap: break-word;
            white-space: normal;
            line-height: 1.4;
        }

        .drink-list {
            width: 95%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .drinks-table {
            width: 100%;
            border-collapse: collapse;
        }

            .drinks-table th, .drinks-table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #EDE7DD;
            }

            .drinks-table th {
                font-weight: bold;
                border: 1px solid #EDE7DD;
                background-color: rgba(94, 70, 61, 0.3);
            }

        .drink-name-cell {
            width: 20%;
            font-weight: bold;
        }

        .drink-categ-cell {
            width: 40%;
        }

        .drink-actions-cell {
            width: 40%;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        p {
            color: #EDE7DD;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .error-container {
            width: 95%;
            margin: 0 auto 20px;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-message {
            margin: 5px 0;
            font-size: 14px;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }

    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>

            @if (Model != null)
            {@if (Model.Id_role == 3)
                {
                    <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
                }
            }

            <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="viewbag-error">
            @ViewBag.ErrorMessage
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-container">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="error-message">@error.ErrorMessage</div>
            }
        </div>
    }
    <div class="drink-list">
        <h2>Список избранных напитков:</h2>

        @if (Model.FavDrinks.Any())
        {
            <table class="drinks-table">
                <thead>
                    <tr>
                        <th class="drink-name-cell">Название</th>
                        <th class="drink-categ-cell">Категории</th>
                        <th class="drink-actions-cell">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var drink in Model.FavDrinks)
                    {
                        <tr>
                            <td class="drink-name-cell">@drink.Name</td>
                            <td class="drink-categ-cell">
                                @if (drink.Categories != null && drink.Categories.Any())
                                {
                                    @string.Join(", ", drink.Categories.Select(c => c.Name))
                                }
                                else
                                {
                                    @:&nbsp;
                                }
                            </td>
                            <td class="drink-actions-cell">
                                <div class="action-buttons">
                                    <a href="@Url.Action("DeleteFromFavs", "Drink", new { drink_id = drink.Id_drink })"
                                       class="action-btn lp-btn">Удалить из избранных</a>

                                    <a href="@Url.Action("GetCompaniesByDrink", "Menu", new { drink_id = drink.Id_drink })"
                                       class="action-btn shops-btn">Поиск кофеен</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Ваш список избранных напитков пуст</p>
        }
    </div>
</body>
</html>