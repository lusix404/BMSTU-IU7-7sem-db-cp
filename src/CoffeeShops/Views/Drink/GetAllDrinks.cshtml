@model CoffeeShops.ViewModels.DrinksListViewModel

@{
    ViewData["Title"] = "Напитки";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .drink-list {
            width: 95%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .drinks-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .drinks-table th, .drinks-table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #EDE7DD;
                vertical-align: middle;
            }

            .drinks-table th {
                font-weight: bold;
                background-color: rgba(94, 70, 61, 0.3);
                border: 1px solid #EDE7DD;
            }

        .name-column {
            width: 20%;
        }

        .categories-column {
            width: 40%;
        }

        .actions-column {
            width: 40%;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
        }

        .adddrink-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #572918;
            white-space: nowrap;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .category-tag {
            background-color: #5E463D;
            color: #EDE7DD;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 12px;
            display: inline-block;
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .error-container {
            width: 95%;
            margin: 0 auto 20px;
            padding: 15px;
            background-color: rgba(255, 107, 107, 0.1);
            border-left: 4px solid red;
            color: red;
            border-radius: 4px;
        }

        .error-message {
            margin: 5px 0;
            font-size: 14px;
        }

        .category-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: white;
            font-size: 14px;
            background-color: darkred;
            white-space: nowrap;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>

            @if (Model != null)
            {@if (Model.Id_role == 3)
                {
                    <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
                }
            }

            <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="viewbag-error">
            @ViewBag.ErrorMessage
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-container">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="error-message">@error.ErrorMessage</div>
            }
        </div>
    }
    <div class="drink-list">
        <h2>Все напитки:</h2>
        @if (Model?.Id_role == 2 || Model?.Id_role == 3)
        {
            <a href="@Url.Action("AddDrink", "Drink")"
               class="adddrink-btn"
               style="font-size: 18px; padding: 8px 15px;">
                + Добавить новый напиток
            </a>
        }

        @if (Model.Drinks.Any())
        {
            <table class="drinks-table">
                <thead>
                    <tr>
                        <th class="name-column">Название</th>
                        <th class="categories-column">Категории</th>
                        <th class="actions-column">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var drink in Model.Drinks)
                    {
                        <tr>
                            <td class="name-column">@drink.Name</td>
                            <td class="categories-column">
                                @if (drink.Categories != null && drink.Categories.Any())
                                {
                                    @string.Join(", ", drink.Categories.Select(c => c.Name))
                                }
                                else
                                {
                                    <span>&nbsp;</span>
                                }
                            </td>
                            <td class="actions-column">
                                <div class="action-buttons">

                                    @if ((drink.Categories == null || drink.Categories.Count() == 0) && (Model?.Id_role == 2 || Model?.Id_role == 3))
                                    {
                                        <a href="@Url.Action("ChooseCategory", "Drink", new { drink_id = drink.Id_drink })"
                                           class="category-btn">Задать категории</a>
                                    }
                                    @if (Model?.Id_role == 2 || Model?.Id_role == 3)
                                    {
                                        <a href="@Url.Action("DeleteDrink", "Drink", new { drink_id = drink.Id_drink })"
                                           class="action-btn">Удалить</a>
                                    }
                                    <a href="@Url.Action("AddToFavs", "Drink", new { drink_id = drink.Id_drink, page = -1 })"
                                       class="action-btn">Добавить в избранное</a>

                                    <a href="@Url.Action("GetCompaniesByDrink", "Menu", new { drink_id = drink.Id_drink })"
                                       class="action-btn">Поиск кофеен</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>В системе нет напитков</p>
        }
    </div>
</body>
</html>