@model CoffeeShops.ViewModels.UsersListViewModel

@{
    ViewData["Title"] = "Пользователи";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bg_color_style.css" />
    <link rel="stylesheet" href="~/css/header_container_style.css" />
    <link rel="stylesheet" href="~/css/logo_style.css" />
    <link rel="stylesheet" href="~/css/logout_button.css" />
    <style>
        .users-table-container {
            width: 95%;
            margin: 20px auto;
            color: #EDE7DD;
            font-size: 14px;
        }

        .users-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .users-table th,
            .users-table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #EDE7DD;
                vertical-align: middle;
            }

            .users-table th {
                font-weight: bold;
                background-color: rgba(94, 70, 61, 0.3);
                border: 1px solid #EDE7DD;
            }

        .login-column {
            width: 25%;
        }

        .bdate-column {
            width: 8%;
        }

        .email-column {
            width: 30%;
        }

        .role-column {
            width: 10%;
        }

        .actions-column {
            width: 20%;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 14px;
            background-color: #EDE7DD;
            white-space: nowrap;
            text-align: center;
        }

        h2 {
            color: #EDE7DD;
            margin-bottom: 20px;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .back-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: #2c1c1a;
        }

        .upper-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #5E463D;
            font-size: 18px;
            background-color: #EDE7DD;
        }

        .del-btn {
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            color: #EDE7DD;
            font-size: 18px;
            background-color: darkred;
        }

        .empty-actions {
            min-height: 1em;
        }

        .text-danger {
            color: red;
            margin: 5px 0;
        }

        .validation-errors {
            color: red;
            background-color: #f8d7da;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }

        .viewbag-error {
            color: #EDE7DD;
            background-color: darkred;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border-left: 3px solid red;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="button-group">
            <a href="@Url.Action("Logout", "User")" class="back-btn">Выйти</a>
            <a href="@Url.Action("GetAllDrinks", "Drink")" class="upper-btn">Список напитков</a>
            <a href="@Url.Action("GetAllCompanies", "Company")" class="upper-btn">Список сетей кофеен</a>
            <a href="@Url.Action("GetFavDrinks", "Drink")" class="upper-btn">Список избранных напитков</a>
            <a href="@Url.Action("GetFavCoffeeShops", "CoffeeShop")" class="upper-btn">Список избранных кофеен</a>

            @if (Model != null)
            {@if (Model.Id_role == 3)
                {
                    <a href="@Url.Action("GetAllUsers", "User")" class="upper-btn">Список пользователей</a>
                }
            }

            <a href="@Url.Action("EditProfile", "User")" class="del-btn">Профиль</a>
        </div>
    </div>

    <div class="users-table-container">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="viewbag-error">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-errors">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div class="text-danger">@error.ErrorMessage</div>
                }
            </div>
        }

        <h2>Список пользователей:</h2>

        @if (Model.Users.Any())
        {
            <table class="users-table">
                <thead>
                    <tr>
                        <th class="login-column">Логин</th>
                        <th class="bdate-column">Дата рождения</th>
                        <th class="email-column">Электронная почта</th>
                        <th class="role-column">Роль</th>
                        <th class="actions-column">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="login-column">@user.Login</td>
                            <td class="bdate-column">@user.BirthDate.ToString("yyyy-MM-dd")</td>
                            <td class="email-column">@user.Email</td>
                            <td class="role-column">
                                @switch (user.Id_role)
                                {
                                    case 1:
                                        @:Обычный пользователь
                                        break;
                                    case 2:
                                        @:Модератор
                                        break;
                                    case 3:
                                        @:Администратор
                                        break;
                                }
                            </td>
                            <td class="actions-column">
                                <div class="action-buttons">
                                    @if (user.Id_role == 1)
                                    {
                                        <a href="@Url.Action("GiveModerRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Выдать права модератора</a>
                                        <a href="@Url.Action("GiveAdminRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Выдать права администратора</a>
                                        <a href="@Url.Action("DeleteUserByAdmin", "User", new { userid = user.Id_user })"
                                           class="action-btn">Удалить</a>
                                    }
                                    else if (user.Id_role == 2)
                                    {
                                        <a href="@Url.Action("TakeModerRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Забрать права модератора</a>
                                        <a href="@Url.Action("DeleteUserByAdmin", "User", new { userid = user.Id_user })"
                                           class="action-btn">Удалить</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("TakeAdminRights", "User", new { id = user.Id_user })"
                                           class="action-btn">Забрать права администратора</a>
                                        <a href="@Url.Action("DeleteUserByAdmin", "User", new { userid = user.Id_user })"
                                           class="action-btn">Удалить</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>В системе нет других пользователей</p>
        }
    </div>
</body>
</html>